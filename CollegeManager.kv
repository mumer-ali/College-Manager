<Screen_Manager>:
    transition: NoTransition()
<Login_Page>:
    name:'login_page'
    BoxLayout:
        orientation:'vertical'
        BoxLayout:
            Image:
                source:'COVER.jpg'
        BoxLayout:
            orientation:'vertical'
            BoxLayout:
                padding:35
                orientation:'horizontal'
                Label:
                    text:'Enter Username'
                    font_size: '20sp'
                TextInput:
                    id:username
                    multiline:False
                    cursor_width:2
            BoxLayout:
                padding:35
                orientation:'horizontal'
                Label:
                    text:'Enter Password'
                    font_size: '20sp'
                TextInput:
                    id:password
                    multiline:False
                    password:True
                    cursor_width:2
            BoxLayout:
                orientation:'vertical'
                Button:
                    text:'Log In'
                    size_hint: None, None 
                    height:50
                    width:100 
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    background_color: (1, 0, 0, 1)
                    on_press: 
                        root.input_user_pass(username,password)
                Label:
                    text:root.invalid_user_pass
                    font_size: '20sp'
<Admin_Panel>:
    name:'admin_panel'
    BoxLayout:
        orientation:'horizontal'
        Spinner: 
            id:spinner_id
            text:'MENU'
            values:['Change Password','Logout'] 
            on_text:root.spinner_clicked(spinner_id)
            size_hint:None, None
            size:150, 44
            pos_hint:{'x': 0, 'top': 1}
    BoxLayout:
        orientation:'horizontal'
        Button:
            text:"Student Section"
            font_size: '20sp'
            size_hint:None, None
            size:200, 44
            background_color: (1, 0, 0, 1)
            pos_hint:{'center_x': .5, 'center_y': .6}
            on_press: app.root.current = 'student_section'
    BoxLayout:
        orientation:'horizontal'
        Button:
            text:"Faculty Section"
            font_size: '20sp'
            size_hint:None, None
            size:200, 44
            background_color: (1, 0, 0, 1)
            pos_hint:{'center_x': .5, 'center_y': .3}
            on_press: app.root.current = 'faculty_section'
<Admin_Panel_CP>:
    name:'admin_panel_cp'
    BoxLayout:
        orientation:'vertical'
        BoxLayout:
            padding:25
            orientation:'horizontal'
            Label:
                text:'Enter Old Password'
                font_size: '20sp'
            TextInput:
                password:True
                id:old_password
                multiline:False
                cursor_width:2
        BoxLayout:
            padding:25
            orientation:'horizontal'
            Label:
                text:'Enter New Password'
                font_size: '20sp'
            TextInput:
                password:True
                id:new_password
                multiline:False
                password:True
                cursor_width:2
        BoxLayout:
            padding:25
            orientation:'horizontal'
            Label:
                text:'Confirm New Password'
                font_size: '20sp'
            TextInput:
                password:True
                id:con_new_password
                multiline:False
                password:True
                cursor_width:2
        BoxLayout:
            padding:25
            orientation:'horizontal'
            Label:
                text:''
                font_size: '20sp'
        BoxLayout:
            orientation:'vertical'
            Button:
                text:'Change Password'
                size_hint:None, None 
                height:50
                width:150 
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                background_color: (1, 0, 0, 1)
                on_press: 
                    root.change_password(old_password,new_password,con_new_password)
        BoxLayout:
            Label:
                text:root.wrong_old_new_pass
                font_size: '20sp'
        BoxLayout:
            orientation:'vertical'
            Button:
