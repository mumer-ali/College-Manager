<Student_Update>:
    name:'student_update'
    BoxLayout:
        orientation:'vertical'
        BoxLayout:
            padding:25
            orientation:'horizontal'
            Label:
                text:'Enter the ID to update data'
                font_size: '20sp'
            TextInput:
                size_hint_y:None
                height:'30'
                id:username_update_student
                multiline:False
                cursor_width:2
        BoxLayout:
            padding:25
            orientation:'horizontal'
            Label:
                text:'Update the Course'
                font_size: '20sp'
            Spinner: 
                id:course_update_student
                values:['Medical','Engineering','IT','Business'] 
        BoxLayout:
            padding:25
            orientation:'horizontal'
            Label:
                text:'Update the Section'
                font_size: '20sp'
            Spinner: 
                id:section_update_student
                values:['A','B','C']
        BoxLayout:
            padding:25
            orientation:'horizontal'
            Label:
                text:'Update the Studying year'
                font_size: '20sp'
            Spinner: 
                id:year_update_student
                values:['1st','2nd']
        BoxLayout:
            padding:25
            orientation:'horizontal'
            Label:
                text:'Scholarship Status'
                font_size: '20sp'
            GridLayout:
                rows:1
                Label:
                    text:"Yes" 
                    font_size:20
                CheckBox:
                    group:"O"
                    on_active:root.student_update_1(self.active,"True")
                Label:
                    text:"No" 
                    font_size:20
                CheckBox:
                    group:"O"
                    active:True
                    id:star
                    on_active:root.student_update_1(self.active,"False")
            Spinner:
                disabled:star.active
                id:scholarship_update_student
                values:['10%','20%','50%'] 
                size_hint:None, None
                size:70, 35
        BoxLayout:
            padding:25
            orientation:'horizontal'
            Label:
                text:root.errors_student_update
                font_size: '20sp'
        BoxLayout:
            orientation:'vertical'
            Button:
                text:"Update"
                font_size: '20sp'
                size_hint:None, None 
                height:50
                width:100
                background_color: (1, 0, 0, 1)
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                on_press: root.student_update_3(username_update_student,course_update_student,section_update_student,year_update_student,scholarship_update_student)
        BoxLayout:
            orientation:'horizontal'
            Button:
                text:"Back"
                font_size: '20sp'
                size_hint:None, None 
                height:50
                width:100
                background_color: (1, 0, 0, 1)
                on_press: 
                    app.root.current = 'student_section'
